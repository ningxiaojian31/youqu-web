/* 边框颜色 */
.s-header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  color: #303133;
  background: #fff;
  margin-top: 16rpx;
}
.s-header:before {
    content: '';
    width: 0;
    height: 40rpx;
    margin-right: 24rpx;
    border-left: 6rpx solid #ec706b;
}
/* 评论 */
.evalution {
  display: block;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  background: #fff;
  padding: 20rpx 0;
}
.eva-item {
  display: block;
  padding: 20rpx 30rpx;
  position: relative;
}
.eva-item image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50px;
    -webkit-flex-shrink: 0;
            flex-shrink: 0;
    margin-right: 24rpx;
}
.eva-item:after {
    content: '';
    position: absolute;
    left: 30rpx;
    bottom: 0;
    right: 0;
    height: 0;
    border-bottom: 1px solid #eee;
    -webkit-transform: translateY(50%);
            transform: translateY(50%);
}
.eva-item:last-child:after {
    border: 0;
}
.eva-right {
  display: block;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  font-size: 26rpx;
  color: #909399;
  position: relative;
}
.eva-right .zan-box {
    display: block;
    -webkit-box-align: base-line;
    -webkit-align-items: base-line;
            align-items: base-line;
    position: absolute;
    top: 10rpx;
    right: 10rpx;
}
.eva-right .zan-box .yticon {
      margin-left: 8rpx;
}
.eva-right .content {
    font-size: 28rpx;
    color: #333;
    padding-top: 20rpx;
}

